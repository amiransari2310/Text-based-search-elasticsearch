{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom",
      "ES2015",
      "es2019"
    ],
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "rootDir": "./",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}